{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "required": [
    "profile",
    "placement"
  ],
  "properties": {
    "profile": {
      "type": "object",
      "properties": {
        "actual": {
          "type": "array",
          "minItems": 2,
          "maxItems": 2,
          "items": {
            "type": "number"
          }
        },
        "id": {
          "type": "string"
        },
        "system": {
          "type": "string"
        },
        "nominal": {
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "placement": {
      "type": "object",
      "required": [
        "start",
        "direction",
        "length"
      ],
      "properties": {
        "start": {
          "type": "array",
          "minItems": 2,
          "maxItems": 2,
          "items": {
            "type": "number"
          }
        },
        "direction": {
          "type": "string"
        },
        "length": {
          "type": "number",
          "exclusiveMinimum": 0
        }
      },
      "additionalProperties": false
    },
    "orientation": {
      "type": "object",
      "properties": {
        "wide_face": {
          "type": "string",
          "enum": [
            "down",
            "up",
            "flat",
            "side",
            "edge"
          ]
        }
      },
      "additionalProperties": false
    },
    "z_base": {
      "type": "number"
    }
  },
  "additionalProperties": false
}