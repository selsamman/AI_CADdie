{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "DescriptiveCAD Scene IR v0.1",
  "type": "object",
  "required": [
    "version",
    "units",
    "room",
    "objects",
    "ops"
  ],
  "properties": {
    "version": {
      "const": "0.1"
    },
    "units": {
      "enum": [
        "in"
      ]
    },
    "room": {
      "type": "object",
      "required": [
        "type",
        "span_flat_to_flat",
        "pit_depth"
      ],
      "properties": {
        "type": {
          "enum": [
            "regular_octagon"
          ]
        },
        "span_flat_to_flat": {
          "type": "number"
        },
        "pit_depth": {
          "type": "number"
        }
      }
    },
    "objects": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "id",
          "type",
          "params"
        ],
        "properties": {
          "id": {
            "type": "string"
          },
          "type": {
            "enum": [
              "room_surface",
              "hearth",
              "member"
            ]
          },
          "params": {
            "type": "object"
          }
        }
      }
    },
    "ops": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "id",
          "op",
          "inputs",
          "params",
          "outputs"
        ],
        "properties": {
          "id": {
            "type": "string"
          },
          "op": {
            "type": "string"
          },
          "inputs": {
            "type": "object"
          },
          "params": {
            "type": "object"
          },
          "outputs": {
            "type": "object"
          }
        }
      }
    }
  }
}