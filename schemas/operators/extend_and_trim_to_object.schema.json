{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "required": [
    "op",
    "source_object_id",
    "source_edge",
    "direction",
    "target_object_id"
  ],
  "properties": {
    "op": {
      "const": "extend_and_trim_to_object"
    },
    "source_object_id": {
      "type": "string"
    },
    "target_object_id": {
      "type": "string"
    },
    "source_edge": {
      "type": "array",
      "minItems": 2,
      "maxItems": 2,
      "items": {
        "type": "integer",
        "minimum": 0
      }
    },
    "direction": {
      "type": "array",
      "minItems": 2,
      "maxItems": 2,
      "items": {
        "type": "number"
      }
    }
  },
  "additionalProperties": false
}
