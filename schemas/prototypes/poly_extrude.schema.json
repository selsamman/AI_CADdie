{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "required": [
    "footprint",
    "extrusion"
  ],
  "properties": {
    "footprint": {
      "type": "array",
      "minItems": 3,
      "items": {
        "type": "array",
        "minItems": 2,
        "maxItems": 2,
        "items": {
          "type": "number"
        }
      }
    },
    "extrusion": {
      "type": "object",
      "required": [
        "z_base",
        "height"
      ],
      "properties": {
        "z_base": {
          "type": "number"
        },
        "height": {
          "type": "number",
          "exclusiveMinimum": 0
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}